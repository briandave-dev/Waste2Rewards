<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Waste2Rewards.Pages.WelcomePage"
             BackgroundColor="#FF7200">

    <VerticalStackLayout Margin="30,80">

        <Label Text="Welcome"
               FontAttributes="Bold"
               FontSize="26"
               TextColor="White"/>

        <Label Text="Hello there, enter phone number to continue!"
               TextColor="White"
               Margin="0,5,0,30"/>

        <Frame Padding="15"
               BackgroundColor="White"
               CornerRadius="20">

            <Entry x:Name="PhoneEntry"
                   Placeholder="Enter phone number"
                   Keyboard="Telephone"
                   PlaceholderColor="#BFBFBF" />
        </Frame>

        <Button Text="Continue"
                Margin="0,30,0,0"
                BackgroundColor="#FF7200"
                TextColor="White"
                CornerRadius="30"
                HeightRequest="55"
                Clicked="Continue_Clicked"/>

    </VerticalStackLayout>
</ContentPage>
