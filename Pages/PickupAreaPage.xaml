<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Waste2Rewards.Pages.PickupAreaPage"
             BackgroundColor="White"
             Title="Filter by Area">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Header with back button -->
        <HorizontalStackLayout Grid.Row="0" Padding="20" Spacing="15">
            <ImageButton Source="back_arrow.png"
                         HeightRequest="24"
                         WidthRequest="24"
                         Clicked="OnBackClicked"
                         BackgroundColor="Transparent"/>
            <Label Text="Filter by Area"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="#323232"
                   VerticalOptions="Center"/>
        </HorizontalStackLayout>

        <!-- Area List -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout x:Name="AreaList" Padding="20" Spacing="15"/>
        </ScrollView>

        <!-- Address Input (shown after area selection) -->
        <VerticalStackLayout x:Name="AddressSection" 
                             Grid.Row="1" 
                             Padding="20" 
                             Spacing="15"
                             IsVisible="False"
                             VerticalOptions="Center">
            <Label Text="Enter your exact address"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="#323232"/>
            <Entry x:Name="AddressEntry"
                   Placeholder="Type your address here"
                   PlaceholderColor="#999999"
                   TextColor="#323232"/>
        </VerticalStackLayout>

        <!-- Apply Button -->
        <Button x:Name="ApplyButton"
                Grid.Row="2"
                Text="Apply"
                BackgroundColor="#FF7200"
                TextColor="White"
                FontSize="16"
                FontAttributes="Bold"
                CornerRadius="25"
                HeightRequest="50"
                Margin="20"
                Clicked="OnApplyClicked"/>

    </Grid>

</ContentPage>