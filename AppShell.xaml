<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Waste2Rewards.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Waste2Rewards.Pages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:HomePage}"
            Route="home" />

        <ShellContent
            Title="My History"
            ContentTemplate="{DataTemplate local:WasteHistoryPage}"
            Route="waste_history" />

        <ShellContent
            Title="Profile"
            ContentTemplate="{DataTemplate local:ProfilePage}"
            Route="profile" />
    </TabBar>

</Shell>